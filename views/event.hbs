     <form style="width:50%" method="POST" action="./add">
     <h2> Formularz zapisu kandydatów na szkolenie</h2>
      <label>imie</label><input type="text" name="imie" placeholder="imię" />
  <br />
  <label>nazwisko</label> <input type="text" name="nazwisko" placeholder="nazwisko" />
  <br />
  <label> kurs </label>
  <select type="text" name="kurs" placeholder="wybierz kurs">
      <option> HTML </option>
      <option> CSS </option>
      <option> JavaScript </option>
      <option> REACT </option>
  </select> <br />
  <label> lokalizacja </label>
  <select type="text" name="lokalizacja" placeholder="wybierz lokalizację">
      <option> Kraków </option>
      <option> Warszawa </option>
      <option> Wrocław </option>
      <option> Gdańsk </option> 
      </select>  <br />
  <button>Zapisz się na kurs</button><br />
</form>     


 <table style="width:80%">
  <tr>
    <th style="width: 18p%">imię</th>
    <th style="width: 20%">nazwisko</th>
    <th style="width: 20%">kurs</th>
    <th style="width: 20%">lokalizacja</th>
    <th style="width: 22%">opcja</th>

  </tr>
  
       {{#each events}}
        <tr>
                    <td>{{imie}}</td>
                    <td>{{nazwisko}}</td>
                    <td>{{kurs}}</td>
                    <td>{{lokalizacja}}</td>
                    <td> <a href="/event/{{_id}}"> modyfikuj </a>
                   <a href="/event/del/{{_id}}"> usuń  </a>  </td>
        </tr>
      {{/each}}
